<% if @game.game_over  %>
    <div class="board">
      <% @game.moves.each do |square| %>
      <a class="btn square"><%= square %></a>
      <% end %>
    </div>
    <p class="first-msg">GAME OVER</p>
    <p id="game-over-msg"><%= @game.game_over %></p>

<% elsif @game.ai_next? %>
  <div class="board">
    <% @game.moves.each.with_index do |square, index| %>
    <a id=<%= "square-#{index}" %> class="btn square"><%= square %></a>
    <% end %>
  </div>
  <p class="first-msg">COMPUTER - <%= @game.turn[:choice].upcase %> - TURN</p>
  <form action="/ai_move">
    <button id="continue-btn" type="submit">Continue</button>
  </form>

<% else %>
  <div class="board">
    <% @game.moves.each.with_index do |square, index| %>
    <a id=<%= "square-#{index}" %> class="square" href="/player/<%= index %>"><%= square %></a>
    <% end %>
  </div>
  <p class="first-msg">PLAYER - <%= @game.turn[:choice].upcase %> - TURN</p>
<% end %>
